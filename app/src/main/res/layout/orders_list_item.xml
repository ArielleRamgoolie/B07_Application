<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/orders_store_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:text="Store name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orders_customer_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:text="Customer Name"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orders_orderID"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:text="OrderID"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/orders_order_status"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:paddingHorizontal="20dp"
        android:text="Order status"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/orders_view_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/black"
            android:gravity="center"
            android:onClick="viewCustomerHome"
            android:text="View Details" />

        <Button
            android:id="@+id/orders_confirm_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/black"
            android:onClick="viewCustomerHome"
            android:text="MARK AS READY" />

    </LinearLayout>

</LinearLayout>