<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inv_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="bottom|left"
            android:paddingLeft="20dp"
            android:text="Inventory name"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inv_count"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/inv_name"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Count"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inv_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/inv_count"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/inv_brand"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/inv_count"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:text="Brand"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/edit_inv_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:text="edit"
        tools:layout_weight="0.02" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginRight="20dp"
        android:layout_weight="0.6"
        android:gravity="center|center_horizontal|left"
        app:icon="@drawable/ic_action_name"
        app:iconGravity="end"
        app:iconTint="#FFFFFF"
        tools:layout_weight="0.02" />

</LinearLayout>