<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyOrdersPage"
    android:orientation="vertical">

    <TextView
        android:id="@+id/view_details_page_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="DETAILS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <ListView
        android:layout_weight="0.8"
        android:id="@+id/view_details_products_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/inventory_list_item" >

    </ListView>

    <TextView
        android:id="@+id/view_details_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="TOTAL:" />

    <Button
        android:id="@+id/update_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0E218A"
        android:text="CONFIRM ORDER"
        android:visibility="gone" />

    <Button
        android:id="@+id/confirm_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#0E218A"
        android:text="CONFIRM ORDER"
        android:visibility="gone" />

</LinearLayout>